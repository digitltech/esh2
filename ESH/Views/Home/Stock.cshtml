<section>
    <div class="container">
        <div class="row">
            <h1 style="visibility:hidden">Digital STORE  интернет магазин компьютерной техники</h1>


            <div class="col-sm-12 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">@ViewBag.NameStore</h2>
                <p style="font-size:10px;padding: 0 20px;">@ViewBag.Text </p>
                    @foreach (var item in Model)
                    {
                        //Добавление в корзину
                        <div class="modal fade" id="@item.Products.id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div aria-hidden="true" class="alert alert-dismissable alert-success">
                                <button type="button" class="close" data-dismiss="alert">×</button>
                                <strong>Ваш товар добавлен в корзину</strong> <a href="@Url.Action("Index","ShoppingCart",null,null)" class="alert-link">Перейти</a>.
                            </div>
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-md-4">
                                                @if (item.Products.OneImg == true)
                                                {
                                                    <img src="@item.Products.Img" alt="@item.Products.Name" height="100" />
                                                }
                                                else
                                                {
                                                    foreach (var img in ViewBag.img)
                                                    {
                                                        if (img.ProductId == item.Products.id)
                                                        {
                                                            if (img.in_first == true)
                                                            {
                                                                <img src="@img.path_img@img.img" alt="@item.Products.Name" height="100" />
                                                            }
                                                        }

                                                    }
                                                }

                                            </div>
                                            <div class="col-md-6">
                                                <h4>Товар дабавлен в корзину</h4>
                                                <p>@item.Products.Name</p>
                                                <span>@string.Format("{0:#,#}", item.Products.Price)</span>

                                            </div>
                                            <div class="col-md-4">

                                            </div>
                                            <div class="col-md-8" style="padding-top: 25px;">
                                                <a href="@Url.Action("Index","ShoppingCart",null,null)" class="btn btn-default on_click2 ">ОФОРМИТЬ ЗАКАЗ</a>

                                                <button type="button" class="btn btn-default on_click3" data-dismiss="modal">

                                                    ПРОДОЛЖИТЬ ПОКУПКИ
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">



                                        <div class="recommended_items">
                                            <!--recommended_items-->
                                            <h2 class="title text-center">С этим товаром покупают</h2>


                                            <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
                                                <div class="carousel-inner">
                                                    <div class="item active">
                                                        @foreach (var join in ViewBag.JoinProduct)
                                                        {
                                                            if (join.ProductFirst == item.Products.id)
                                                            {
                                                                <div class="col-sm-4">
                                                                    <div class="product-image-wrapper">
                                                                        <div class="single-products">
                                                                            <div class="productinfo text-center">
