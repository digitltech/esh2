                                                                                            if (img.in_first == true)
                                                                                            {
                                                                                                <img src="@img.path_img@img.img" alt="@join.Products.Name" />
                                                                                            }
                                                                                        }
                                                                                    }
                                                                                }

                                                                                <h2>@string.Format("{0:#,#}", join.Products.Price) <i class="fa fa-rub" aria-hidden="true"></i></h2>
                                                                                <p>@join.Products.Name</p>
                                                                                <a href="#" data-id="@join.Products.id" class="btn btn-default add-to-cart "><i class="fa fa-shopping-cart"></i>В корзину</a>

                                                                            </div>
                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            }

                                                        }


                                                    </div>

                                                </div>
                                                <a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
                                                    <i class="fa fa-angle-left"></i>
                                                </a>
                                                <a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
                                                    <i class="fa fa-angle-right"></i>
                                                </a>
                                            </div>
                                        </div><!--/recommended_items-->



                                    </div>
                                </div>
                            </div>
